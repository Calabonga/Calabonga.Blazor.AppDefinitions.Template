@using Calabonga.Blazor.AppDefinitions
@using Calabonga.Blazor.Shell.Extensions
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Calabonga.Blazor.Shell</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
       @foreach (var pageDetail in ModuleDefinitions.Instance.Modules.AsNavLinks())
       {
        <div class="nav-item px-3">
                <NavLink class="nav-link" href="@pageDetail.Route" Match="@pageDetail.Match">
                    @pageDetail.Title
            </NavLink>
        </div>
       }
    </nav>
</div>

